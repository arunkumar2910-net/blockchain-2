{
  "info": {
    "name": "CivicConnect Admin Panel Tests",
    "description": "Comprehensive test collection for the advanced admin panel features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{admin_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "user_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "report_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Login as Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('admin_token', response.token);",
                  "    pm.test('Login successful', () => {",
                  "        pm.expect(response.success).to.be.true;",
                  "        pm.expect(response.data.user.role).to.equal('admin');",
                  "    });",
                  "} else {",
                  "    pm.test('Login failed', () => {",
                  "        pm.expect.fail('Admin login failed');",
                  "    });",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@civicconnect.com\",\n  \"password\": \"Admin@123456\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "2. Dashboard Analytics",
      "item": [
        {
          "name": "Get Dashboard Analytics - 30 days",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has analytics data', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data).to.have.property('overview');",
                  "    pm.expect(response.data).to.have.property('charts');",
                  "    pm.expect(response.data.timeframe).to.equal('30d');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/dashboard/analytics?timeframe=30d",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "dashboard", "analytics"],
              "query": [
                {
                  "key": "timeframe",
                  "value": "30d"
                }
              ]
            }
          }
        },
        {
          "name": "Get Dashboard Analytics - 7 days",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/dashboard/analytics?timeframe=7d",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "dashboard", "analytics"],
              "query": [
                {
                  "key": "timeframe",
                  "value": "7d"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "3. User Management",
      "item": [
        {
          "name": "Get All Users",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has users data', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data).to.have.property('users');",
                  "    pm.expect(response.data).to.have.property('pagination');",
                  "    if (response.data.users.length > 0) {",
                  "        pm.collectionVariables.set('user_id', response.data.users[0]._id);",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/users?page=1&limit=20",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "users"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Search Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/users?search=admin&role=admin",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "users"],
              "query": [
                {
                  "key": "search",
                  "value": "admin"
                },
                {
                  "key": "role",
                  "value": "admin"
                }
              ]
            }
          }
        },
        {
          "name": "Toggle User Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isActive\": false\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/users/{{user_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "users", "{{user_id}}", "status"]
            }
          }
        },
        {
          "name": "Update User Role",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"employee\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/users/{{user_id}}/role",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "users", "{{user_id}}", "role"]
            }
          }
        }
      ]
    },
    {
      "name": "4. System Statistics",
      "item": [
        {
          "name": "Get System Statistics - 30 days",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has statistics data', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data).to.have.property('users');",
                  "    pm.expect(response.data).to.have.property('reports');",
                  "    pm.expect(response.data).to.have.property('performance');",
                  "    pm.expect(response.data.period).to.equal('30d');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/statistics?period=30d",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "statistics"],
              "query": [
                {
                  "key": "period",
                  "value": "30d"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "5. Advanced Search",
      "item": [
        {
          "name": "Advanced Report Search",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status code is 200', () => {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response has search results', () => {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data).to.have.property('reports');",
                  "    pm.expect(response.data).to.have.property('pagination');",
                  "    pm.expect(response.data).to.have.property('statistics');",
                  "    pm.expect(response.data).to.have.property('filters');",
                  "    if (response.data.reports.length > 0) {",
                  "        pm.collectionVariables.set('report_id', response.data.reports[0]._id);",
                  "    }",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/reports/search?page=1&limit=20&sortBy=createdAt&sortOrder=desc",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "search"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "sortBy",
                  "value": "createdAt"
                },
                {
                  "key": "sortOrder",
                  "value": "desc"
                }
              ]
            }
          }
        },
        {
          "name": "Search with Filters",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/admin/reports/search?status=submitted&category=road_issue&priority=high&hasImages=true",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "search"],
              "query": [
                {
                  "key": "status",
                  "value": "submitted"
                },
                {
                  "key": "category",
                  "value": "road_issue"
                },
                {
                  "key": "priority",
                  "value": "high"
                },
                {
                  "key": "hasImages",
                  "value": "true"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "6. Bulk Operations",
      "item": [
        {
          "name": "Bulk Update Report Status",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reportIds\": [\"{{report_id}}\"],\n  \"status\": \"in_review\",\n  \"comment\": \"Bulk review initiated via Postman test\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/reports/bulk-update-status",
              "host": ["{{base_url}}"],
              "path": ["api", "admin", "reports", "bulk-update-status"]
            }
          }
        },
        {
          "name": "Bulk Assign Reports",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reportIds\": [\"{{report_id}}\"],\n  \"assigneeId\": \"{{user_id}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/reports/bulk-assign",
