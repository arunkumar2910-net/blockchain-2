              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reportIds\": [\"{{report_id}}\"],\n  \"reason\": \"Test deletion via Postman\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/admin/reports/bulk-delete",
